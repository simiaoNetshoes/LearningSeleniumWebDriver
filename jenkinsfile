pipeline{
    agent any

    stages{

        stage('Compile Project Stage'){
           steps{
               withMaven(maven: 'maven-3.5.4'){
                    sh 'MAVEN_PATH=/Users/danielsimiao/Documents/Maven/apache-maven-3.5.4/bin \\
                        mvn compile'
                }
            }
        }

        stage('Test Project Stage'){
            steps{
                withMaven(maven: 'maven-3.5.4'){
                    sh "mvn test"
                }
            }
        }

        stage('Deploy Project Stage'){
            steps{
                withMaven(maven: 'maven-3.5.4'){
                    sh "mvn deploy"
                }
            }
        }

    }
}