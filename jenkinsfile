pipeline{
    agent any

    stages{

        stage('Compile Stage'){
           steps{
               withMaven(maven: 'maven-3.5.4'){
                sh  """
                        cd /Users/danielsimiao/IdeaProjects/LearningSeleniumWebDriver \\
                        mvn compile
                    """
                }
            }
        }

        stage('Test Stage'){
            steps{
                withMaven(maven: 'maven-3.5.4'){
                    sh  """
                            cd /Users/danielsimiao/IdeaProjects/LearningSeleniumWebDriver \\
                            mvn test
                        """
                }
            }
        }

        stage('Deploy Stage'){
            steps{
                withMaven(maven: 'maven-3.5.4'){
                  sh  """
                            cd /Users/danielsimiao/IdeaProjects/LearningSeleniumWebDriver \\
                            mvn deploy
                     """
                }
            }
        }

    }
}