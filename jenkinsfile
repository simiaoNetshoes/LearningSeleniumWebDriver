pipeline{
    agent any

    stages{

        stage('Compile Project Stage'){
           steps{
               withMaven(maven: 'maven-3.5.4'){
             sh  """
                    cd /Users/danielsimiao/IdeaProjects/LearningSeleniumWebDriver \\
                    sudo mvn compile
                """
                }
            }
        }

        stage('Test Project Stage'){
            steps{
                withMaven(maven: 'maven-3.5.4'){
                    sh  """
                        cd /Users/danielsimiao/IdeaProjects/LearningSeleniumWebDriver \\
                        sudo mvn test
                        """
                }
            }
        }

        stage('Deploy Project Stage'){
            steps{
                withMaven(maven: 'maven-3.5.4'){
                  sh  """
                     cd /Users/danielsimiao/IdeaProjects/LearningSeleniumWebDriver \\
                     sudo mvn deploy
                     """
                }
            }
        }

    }
}