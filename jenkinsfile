pipeline{
    agent any

    stages{
        def mvn_version = 'M3'
            withEnv( ["PATH+MAVEN=${tool mvn_version}/bin"] ) {
                //sh "mvn clean package"
            }
        stage('Compile Stage'){
           steps{
               def mvn_version = 'maven-3.5.4'
               withMaven(["PATH+MAVEN=${tool mvn_version}/bin"]){
                sh  """
                        mvn compile
                    """
                }
            }
        }

        stage('Test Stage'){
            steps{
                withMaven(maven: 'maven-3.5.4'){
                    sh  """
                            mvn test
                        """
                }
            }
        }

        stage('Deploy Stage'){
            steps{
                withMaven(maven: 'maven-3.5.4'){
                  sh  """
                            mvn deploy
                     """
                }
            }
        }

    }
}