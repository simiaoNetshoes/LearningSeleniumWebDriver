pipeline{
    agent any

    stages{

        stage('Compile Stage'){
           steps{
               withMaven(maven: 'maven-3.5.4'){
                    sh 'MAVEN_PATH=/Users/danielsimiao/Documents/Maven/apache-maven-3.5.4/bin
                        cd /Users/danielsimiao/IdeaProjects/ff-qa-AutoTesterAdmin
                        sudo $MAVEN_PATH/mvn clean compile'
                }
            }
        }

        stage('Test Stage'){
            steps{
                withMaven(maven: 'maven-3.5.4'){
                    sh 'MAVEN_PATH=/Users/danielsimiao/Documents/Maven/apache-maven-3.5.4/bin
                        cd /Users/danielsimiao/IdeaProjects/ff-qa-AutoTesterAdmin
                        sudo $MAVEN_PATH/mvn test'
                }
            }
        }

        stage('Deploy Stage'){
            steps{
                withMaven(maven: 'maven-3.5.4'){
                    sh 'MAVEN_PATH=/Users/danielsimiao/Documents/Maven/apache-maven-3.5.4/bin
                        cd /Users/danielsimiao/IdeaProjects/ff-qa-AutoTesterAdmin
                        sudo $MAVEN_PATH/mvn deploy'
                }
            }
        }

    }
}